<%- partial('_partial/header') %>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="tag-container">
        <h1 class="tag-title"><%= __('tags') %>: <%= page.tag %></h1>
        <div class="posts-container">
          <% page.posts.each(function(post){ %>
            <div class="post-item">
              <div class="post-title">
                <h2><a href="<%- url_for(post.path) %>"><%= post.title %></a></h2>
              </div>
              <div class="post-meta">
                <span><i class="fas fa-calendar"></i> <%= post.date.format('YYYY-MM-DD') %></span>
                <% if (post.categories && post.categories.length){ %>
                  <span><i class="fas fa-folder"></i> <%- list_categories(post.categories, { show_count: false, style: 'none' }) %></span>
                <% } %>
                <% if (post.tags && post.tags.length){ %>
                  <span><i class="fas fa-tags"></i> <%- list_tags(post.tags, { show_count: false, style: 'none' }) %></span>
                <% } %>
              </div>
              <div class="post-excerpt">
                <% if (post.excerpt) { %>
                  <%- post.excerpt %>
                <% } else { %>
                  <%- strip_html(post.content).substr(0, 200) %>...
                <% } %>
              </div>
              <div class="post-more">
                <a href="<%- url_for(post.path) %>" class="read-more">
                  <i class="fas fa-angle-right"></i> Read More
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%- partial('_partial/sidebar') %>
    </div>
  </div>
</div>
